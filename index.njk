/* ========
 * Restaurant List
 */

.restaurants {
  line-height: 1.3;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  grid-gap: 25px 50px ;
  grid-auto-flow: dense;

  counter-reset: section;

  padding:0;
}

.restaurants > li {
  list-style: none;
  margin: 0;

  display:grid;
  grid-gap: 0;
  grid-template-columns: 100px;
}

@media (max-width: 674px) {
    .restaurants li {
      grid-column: span 1 !important;
      font-size: inherit !important;
    }  
}

.restaurants > li:before {
  counter-increment: section;            
  content: counters(section, ".") " ";
  border: 1px solid #40343450;
  height: 80px;
  width: 80px;
  text-align: right;
  padding: 10px;
  box-sizing: border-box;
  line-height: 5rem;
  display: inline-block;
  font-size: 2rem;
  font-weight: bold;
  
  grid-row: 1;
  grid-column: 1;
}

.restaurants > li > div {
  grid-column: 2;
}

.restaurants-reserved {
  margin-bottom: 6rem;
}

.restaurants-reserved > li:before {
  content: "";
  opacity: .5;
}

.restaurants-name { 
font-weight: bold;
}

